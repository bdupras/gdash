!!! 5

%html{ :lang => "en" }
  %head
    %link{ :href => "/css/bootstrap.min.css", :rel => "stylesheet" }
    %script{ :src => "/js/jquery-1.8.1.min.js" }
    %script{ :src => "/js/bootstrap.min.js" }
    %title GDash
  %body{ :style => "padding-top: 50px;" }
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        %a.brand{ :href => dashboards_path } GDash
        %ul.nav
          %li.dropdown
            %a.dropdown-toggle{ :href => "#", "data-toggle" => "dropdown" }
              Dashboards
              %b.caret
            = dashboard_nav @dashboard
          %li.dropdown
            %a.dropdown-toggle{ :href => "#", "data-toggle" => "dropdown" }
              Time Windows
              %b.caret
            = window_nav @dashboard
          %li
            %form.navbar-search
              %input.search-query#tags{ :type => "text", :placeholder => "Filter" }
        %ul.nav.pull-right
          %li
            %a{ :href => docs_path } Documentation
    .container-fluid
      .row-fluid
        %table.table.table-hover
          %thead
            %th{ :width => "30%" } Name
            %th{ :width => "70%" } Description
          %tbody
            - GDash::Dashboard.toplevel.sort.each do |dashboard|
              %tr
                %td
                  %a{ :href => dashboard_path(dashboard) }= dashboard.title
                %td= dashboard.description
    .container-fluid
      %h6
        Updated
        = Time.now
